# AI智能贷款平台环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=ai_loan_platform
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_mysql_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# MongoDB配置
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ai_loan_platform
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# Elasticsearch配置
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=your_elasticsearch_username
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# ==================== 消息队列配置 ====================
# RabbitMQ配置
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=your_rabbitmq_username
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_VHOST=/

# ==================== 安全配置 ====================
# JWT配置
JWT_SECRET=your_jwt_secret_key_here_must_be_very_long_and_secure
JWT_EXPIRATION=3600

# 加密密钥
ENCRYPTION_KEY=your_encryption_key_here_32_chars_long

# ==================== 第三方服务配置 ====================
# 短信服务配置
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=your_sms_sign_name
SMS_TEMPLATE_CODE=your_sms_template_code

# 邮件服务配置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@ai-loan-platform.com

# 文件存储配置
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_ENDPOINT=your_oss_endpoint
OSS_BUCKET_NAME=your_oss_bucket_name

# ==================== AI服务配置 ====================
# AI模型配置
AI_MODEL_PATH=/app/models
AI_MODEL_VERSION=1.1.0
AI_GPU_ENABLED=true
AI_GPU_MEMORY_LIMIT=4096

# OCR服务配置
OCR_API_KEY=your_ocr_api_key
OCR_API_SECRET=your_ocr_api_secret

# ==================== 监控配置 ====================
# Prometheus配置
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Grafana配置
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your_grafana_password

# Jaeger配置
JAEGER_HOST=localhost
JAEGER_PORT=14268

# ==================== 业务配置 ====================
# 平台配置
PLATFORM_NAME=AI智能贷款平台
PLATFORM_VERSION=1.1.0
PLATFORM_URL=https://ai-loan-platform.com

# 贷款配置
MAX_LOAN_AMOUNT=10000000
MIN_LOAN_AMOUNT=10000
MAX_LOAN_TERM=120
MIN_LOAN_TERM=1
BASE_INTEREST_RATE=0.045

# 风险配置
RISK_TOLERANCE_THRESHOLD=0.75
CREDIT_SCORE_THRESHOLD=600
DEBT_TO_INCOME_RATIO_THRESHOLD=0.7

# ==================== 开发配置 ====================
# 环境标识
SPRING_PROFILES_ACTIVE=dev
NODE_ENV=development

# 调试配置
DEBUG_MODE=true
LOG_LEVEL=INFO
ENABLE_SWAGGER=true

# ==================== GitHub配置 ====================
# GitHub仓库配置
GITHUB_USERNAME=173787247
GITHUB_REPOSITORY=ai-loan-platform
GITHUB_TOKEN=your_github_token_here

# CI/CD配置
DOCKER_REGISTRY=your_docker_registry
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ==================== 生产环境配置 ====================
# 生产环境特定配置
PRODUCTION_DOMAIN=ai-loan-platform.com
PRODUCTION_SSL_CERT_PATH=/etc/ssl/certs/ai-loan-platform.crt
PRODUCTION_SSL_KEY_PATH=/etc/ssl/private/ai-loan-platform.key

# 备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup

# ==================== 安全配置 ====================
# 安全策略
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8
REQUIRE_2FA=false

# 防火墙配置
ALLOWED_IPS=127.0.0.1,192.168.1.0/24
BLOCKED_IPS=

# ==================== 性能配置 ====================
# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 连接池配置
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30000

# 线程池配置
THREAD_POOL_CORE_SIZE=10
THREAD_POOL_MAX_SIZE=50
THREAD_POOL_QUEUE_SIZE=100
