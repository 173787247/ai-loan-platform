# 生产环境配置示例
# 复制此文件为 .env.prod 并修改相应值

# 数据库配置
MYSQL_ROOT_PASSWORD=ailoan123456
MYSQL_DATABASE=ai_loan_platform
MYSQL_USER=ailoan
MYSQL_PASSWORD=ailoan123456

# MongoDB配置
MONGO_USERNAME=ailoan
MONGO_PASSWORD=ailoan123456
MONGO_DATABASE=ai_loan_platform

# Redis配置
REDIS_PASSWORD=ailoan123456

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-for-production
JWT_EXPIRATION=86400

# AI服务配置
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000

# 前端配置
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_AI_SERVICE_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=production

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/ai-loan-platform

# 安全配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
