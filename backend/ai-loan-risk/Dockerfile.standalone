# 多阶段构建 - 构建阶段
FROM maven:3.8.6-openjdk-11-slim as builder

# 设置工作目录
WORKDIR /app

# 复制模块POM文件
COPY backend/ai-loan-risk/pom.xml ./pom.xml

# 复制源代码
COPY backend/ai-loan-risk/src ./src

# 构建应用
RUN mvn clean package -DskipTests

# 运行阶段
FROM openjdk:11-jre-slim

# 设置工作目录
WORKDIR /app

# 复制构建的JAR文件
COPY --from=builder /app/target/ai-loan-risk-1.1.0.jar app.jar

# 暴露端口
EXPOSE 8080

# 启动应用
ENTRYPOINT ["java", "-jar", "app.jar"]
